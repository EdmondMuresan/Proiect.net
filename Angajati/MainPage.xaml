<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Angajati.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="company_logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Company Logo" />

            <Label
                Text="Welcome to Our Employee Management System"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Manage and organize your employee information with ease."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Use this app to keep track of employee details, roles, and more." />

            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
