@page
@model Pizzazzia.Pages.Pizzas.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Price)
        </dd>
    </dl>
</div>

<div>
    <h4>Ingredients</h4>
    <ul>
        @foreach (var ingredient in Model.Ingredients)
        {
            <li>@ingredient.Name</li>
        }
    </ul>
</div>

<div>
    <h4>Total Gramaj and Calories:</h4>
    <p>
        Gramaj: @Model.Ingredients.Sum(i => i.Gramaj) grams<br />
        Calories: @Model.Ingredients.Sum(i => i.nr_Calorii) Kcal
    </p>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Pizza.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
